{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EntityExtraction",
  "type": "object",
  "required": ["entities"],
  "properties": {
    "entities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "value", "confidence"],
        "properties": {
          "type": {
            "type": "string",
            "description": "Entity category"
          },
          "value": {
            "type": "string",
            "description": "Extracted text span"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "metadata": {
            "type": "object",
            "additionalProperties": {
              "type": ["string", "number", "boolean"]
            }
          }
        }
      }
    }
  }
}
